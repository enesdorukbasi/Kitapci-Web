@model KitapciApp.EntityLayer.Satıs
@{
    ViewBag.Title = "Sepet Detay Listele";
}

<h2>Sepet Detay Listele</h2>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Kitap</th>
        <th>Adet</th>
        <th>Satış Durum</th>
        <th>Tutar</th>
        <th></th>
    </tr>
    @foreach (var item in Model.Detaylar)
    {
        <tr>
            <td>@((item.Kitap == null)? "Null" : item.Kitap.Ad)</td>
            <td>@item.Adet</td>
            <td>@item.Tutar.ToString("C2")</td>
            <td>
                @*<a href="@Url.Action("Sil", new { id = item.Id})" class="btn btn-danger btn-xs">Sil</a>*@
            </td>
        </tr>
    }
    @if (Model.Detaylar.Count == 0)
    {
        <tr>
            <td colspan="3"><span class="text-danger">Sepet Boş!</span></td>
        </tr>
    }
</table>

<a href="@Url.Action("SatisEkle")" class="btn btn-info">Geri</a>
@if (Model.Detaylar.Count != 0)
{
    <a href="@Url.Action("SatisTamamla")" class="btn btn-success">Tamamla</a>
}
