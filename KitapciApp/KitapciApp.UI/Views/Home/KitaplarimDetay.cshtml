@model List<KitapciApp.EntityLayer.SatısDetay>
@{
    ViewBag.Title = "Satın Alınan Detay Listele";
}

<h2>Satın Alınan Detayları</h2>

<table class="table">
    <tr>
        <th>Kitap</th>
        <th>Adet</th>
        <th>Tutar</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@((item.Kitap == null)? "Null" : item.Kitap.Ad)</td>
            <td>@item.Adet</td>
            <td>@item.Tutar.ToString("C2")</td>
        </tr>
    }
</table>

<a href="@Url.Action("HomeView")" class="btn btn-info">Geri</a>
