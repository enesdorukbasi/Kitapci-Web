@model List<KitapciApp.EntityLayer.Satıs>
@{
    ViewBag.Title = "Satış Listele";
}

<h2>Listele</h2>

<a href="@Url.Action("SatisEkle")" class="btn btn-primary">Satış Ekle</a>

<br />
<br />

<table class="table">
    <tr>
        <th>Id</th>
        <th>Tarih Saat</th>
        <th>Satış Durum</th>
        <th>EPosta</th>
        <th>Toplam Tutar</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.TarihSaat</td>
            <td>@item.SatisDurum</td>
            <td>@item.EPosta</td>
            <td>@item.ToplamTutar</td>
            <td>
                <a href="@Url.Action("Duzenle", new { id = item.Id})" class="btn btn-warning btn-xs">Düzenle</a>
                <a href="@Url.Action("Sil", new { id = item.Id})" class="btn btn-danger btn-xs">Sil</a>
                <a href="@Url.Action("SatisDetay", new { id = item.Id})" class="btn btn-info btn-xs">Detay</a>
            </td>
        </tr>
    }
</table>
