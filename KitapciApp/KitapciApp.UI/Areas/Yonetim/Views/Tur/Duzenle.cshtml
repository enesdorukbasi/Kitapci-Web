@model KitapciApp.EntityLayer.Tur
@{
    ViewBag.Title = "Tür Düzenle";
}

<h2>Tur Düzenle</h2>

<br />
<br />

@using (Html.BeginForm("Duzenle", "Tur", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(x => x.Ad, new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <a href="@Url.Action("Listele")" class="btn btn-default">İptal</a>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </div>
}
