@model KitapciApp.EntityLayer.Kitap
@{
    ViewBag.Title = "Kitap Detayları";
}

<br />


<div id="mainBody">
    <div class="container, row">
        <div class="span9, row">
            <div id="gallery" class="span3">
                <a href="themes/images/products/large/f1.jpg" title="Fujifilm FinePix S2950 Digital Camera">
                    <img src="~/Content/Image/book.png" style="width:100%" alt="Fujifilm FinePix S2950 Digital Camera">
                </a>
            </div>
            <div class="span6">
                <div class="span9">
                    <div id="myTabContent" class="tab-content">
                        <div class="tab-pane fade active in" id="home">
                            <h4>Kitap Bilgileri</h4>
                            <table class="table table-bordered">
                                <tr class="techSpecRow"><th colspan="2">Ürün Detay</th></tr>
                                <tr class="techSpecRow"><td class="techSpecTD1">Adı: </td><td class="techSpecTD2">@Model.Ad</td></tr>
                                <tr class="techSpecRow"><td class="techSpecTD1">Yazar:</td><td class="techSpecTD2">@Model.Yazar</td></tr>
                                <tr class="techSpecRow"><td class="techSpecTD1">Açıklama:</td><td class="techSpecTD2">@Model.Tur.Ad</td></tr>
                                <tr class="techSpecRow"><td class="techSpecTD1">Fiyat:</td><td class="techSpecTD2"><b style="color:green">@Model.Fiyat ₺</b></td></tr>
                                <tr class="techSpecRow"><td class="techSpecTD1">Adet:</td><td class="techSpecTD2"><b style="color:red">@Model.Adet</b></td></tr>
                                <tr class="techSpecRow">
                                    <th colspan="2">
                                        <a href="@Url.Action("HomeView")" class="btn btn-default" style="width:200px">Geri</a>
                                        <a href="@Url.Action("SepeteEkle", new { id = ViewBag.secilenId})" class="btn btn-default" style="width:200px">Sepete Ekle</a>
                                    </th>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

